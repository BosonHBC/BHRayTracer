<xml>
  <scene>
    <!-- Objects -->
    <object name="box">
      <translate x="0" y="0" z="12"/>
      <object type="plane" name="WallBottom" material="wall">
        <scale value="32"/>
        <translate z="-12"/>
      </object>
      <object type="plane" name="WallTop" material="wall">
        <scale value="32"/>
        <rotate angle="180" x="1"/>
        <translate z="12"/>
      </object>
      <object type="plane" name="WallBack" material="wall">
        <scale value="32"/>
        <rotate angle="90" x="1"/>
        <translate y="20"/>
      </object>
      <object type="plane" name="WallFront" material="wall">
        <scale value="32"/>
        <rotate angle="-90" x="1"/>
        <translate y="-32"/>
      </object>
      <object type="plane" name="WallLeft" material="wallRed">
        <scale value="32"/>
        <rotate angle="90" y="1"/>
        <translate x="-15"/>
      </object>
      <object type="plane" name="WallRight" material="wallBlue">
        <scale value="32"/>
        <rotate angle="-90" y="1"/>
        <translate x="15"/>
      </object>
    </object>
    <object type="obj" name="Resource\Data\teapot.obj" material="mtl1">
      <scale value="0.35"/>
      <rotate angle="30" z="1"/>
      <translate x="0" y="15" z="0.1"/>
    </object>
    <object type="sphere" name="Sphere1" material="mtl2">
      <scale value="3.5"/>
      <rotate angle="0" z="1"/>
      <translate x="2" y="0" z="3.5"/>
    </object>

    <!-- <object type="obj" name="Resource\Data\teapot2.obj" material="mtl2">
      <scale x="0.19" y="0.23" z="0.19"/>
      <rotate angle="90" x="1"/>
      <rotate angle="220" z="1"/>
      <translate x="3" y="-5" z="0"/>
    </object> -->
    <object type="obj" name="Resource\Data\blend2.obj" material="mtl1">
      <scale x="8" y="4" z="8"/>
      <rotate angle="90" x="1"/>

      <translate x="2" y="0" z="0.01"/>
    </object>
 
    <!-- Materials -->
    <material type="blinn" name="wall">
      <diffuse  r="1" g="1" b="1"/>
      <specular value="0"/>
    </material>
    <material type="blinn" name="wallRed">
      <diffuse  r="1.0" g="0.2" b="0.2"/>
      <specular value="0"/>
    </material>
    <material type="blinn" name="wallBlue">
      <diffuse  r="0.2" g="0.2" b="1.0"/>
      <specular value="0"/>
    </material>
    <material type="blinn" name="light">
      <emission  value="20"/>
      <specular value="0"/>
    </material>
    <material type="blinn" name="mtl1">
      <diffuse  r="0.8" g="0.2" b="0.2"/>
      <specular r="1.0" g="1.0" b="1.0" value="0.7"/>
      <glossiness value="20"/>
    </material>
    <material type="blinn" name="mtl2">
      <diffuse value="0.2"/>
      <specular value="0.8"/>
      <glossiness value="50"/>
      <refraction index="2" value="0.8"/>
    </material>
    <material type="blinn" name="glossy3">
      <diffuse value="0"/>
      <specular value="0.8"/>
      <glossiness value="10"/>
      <reflection value="0.8"/>
    </material>
    <!-- Lights -->
    <light type="point" name="pointLight">
      <intensity value="0.5"/>
      <position x="0" y="0" z="22"/>
      
    </light>
  </scene>
 
  <camera>
    <position x="-10" y="-30" z="20"/>
    <target x="7" y="7" z="2"/>
    <up x="0" y="0" z="1"/>
    <fov value="45"/>
    <width value="800"/>
    <height value="600"/>
  </camera>
</xml>